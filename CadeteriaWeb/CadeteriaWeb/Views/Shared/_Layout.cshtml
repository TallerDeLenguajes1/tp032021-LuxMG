<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CadeteriaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4">
            <div class="container">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">CadeteriaWeb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item m-3">
                            <div class="btn-group">
                                <a class="btn btn-outline-dark" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                <button type="button" class="btn btn-outline-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Pedidos" asp-action="CreatePedido">Cargar pedido</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item m-3">
                            <div class="btn-group">
                                <a class="btn btn-outline-dark" asp-controller="Cadetes" asp-action="Index">Cadetes</a>
                                <button type="button" class="btn btn-outline-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Cadetes" asp-action="CreateCadete">Cargar cadete</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item m-3">
                            <div class="btn-group">
                                <a class="btn btn-outline-dark" asp-controller="Usuarios" asp-action="IndexAdmin">Usuarios</a>
                                <button type="button" class="btn btn-outline-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Usuarios" asp-action="CreateUsuario">Cargar usuario</a>
                                    <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">Ver mi usuario</a>
                                </div>
                            </div>
                        </li>

                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-around float-right">
                    <a class="btn btn-outline-dark" asp-controller="Usuarios" asp-action="Login">Iniciar sesion</a>
                    <a class="btn btn-outline-dark" asp-controller="Usuarios" asp-action="CerrarSesion">Logout</a>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CadeteriaWeb - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
