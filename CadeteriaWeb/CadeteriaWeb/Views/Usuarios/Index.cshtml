@{
    ViewData["Title"] = "Mi Usuario";
}
@model CadeteriaWeb.Entities.Usuario;

<section class="vh-100 bg-secondary">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Mi Usuario</h3>

                        <div class="form-outline mb-4">
                            <p>Username: @Model.Username</p>
                        </div>

                        <div class="form-outline mb-4">
                            <p>Rol: @Model.Rol</p>
                        </div>

                        <hr class="my-4">

                        @if (Model.Rol.ToString() != "ADMIN")
                        {
                            <div>
                                <p class="mb-0">Querés cambiar tu nombre de usuario o contraseña? <a asp-action="UpdateUsuario" asp-route-id="@Model.Id" class="fw-bold">Haz click aquí!</a></p>
                                <p class="mb-0">Querés eliminar tu cuenta? <a asp-action="DeleteUsuario" asp-route-id="@Model.Id" class="fw-bold">Haz click aquí!</a> <b class="text-danger">(La eliminación no es reversible, pensalo bien antes de hacerlo)</b></p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>