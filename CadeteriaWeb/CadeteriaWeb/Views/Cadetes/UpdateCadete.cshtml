@model CadeteriaWeb.Entities.Cadete;
@{
    ViewData["Title"] = "Modificacion del cadete #" + Model.Id;
}


<div class="text-center">
    <h1 class="display-4">Modificar el cadete</h1>
    <br />

    <div class="form-group">
        <form asp-action="UpdateCadete" method="post">
            <div>
                <h4>Datos del cadete: </h4>
                <div class="form-group row">
                    <label for="nombre">Nombre: </label>
                    <input type="text" name="nombre" id="nombre" value="@Model.Nombre" class="form-control" />
                </div>
                <div class="form-group row">
                    <label for="direccion">Direccion: </label>
                    <input type="text" name="direccion" id="direccion" value="@Model.Direccion" class="form-control" />
                </div>
                <div class="form-group row">
                    <label for="telefono">Telefono: </label>
                    <input type="text" name="telefono" id="telefono" value="@Model.Telefono" class="form-control" />
                </div>
                <input hidden type="number" name="id" value="@Model.Id" />
            </div>

            <button class="btn btn-primary m-2" type="submit"> Confirmar </button>
            <button asp-action="Index" class="btn btn-primary m-2"> Salir </button>
        </form>
    </div>
</div>