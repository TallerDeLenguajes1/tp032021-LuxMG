@model CadeteriaWeb.Entities.Cadete;
@{
    ViewData["Title"] = "Eliminacion del cadete #" + Model.Id;
}


<div class="text-center">
    <h1 class="display-4">Eliminación de cadete</h1>
    <br />

    <div class="form-group">
        <form asp-action="DeleteCadete" method="post">
            <div>
                <h4>Datos del cadete: </h4>
                <div class="form-group row">
                    <label><b>Nombre: </b>@Model.Nombre</label>
                </div>
                <div class="form-group row">
                    <label><b>Direccion: </b>@Model.Direccion</label>
                </div>
                <div class="form-group row">
                    <label><b>Telefono: </b>@Model.Telefono</label>
                </div>

                <input hidden type="number" name="id" value="@Model.Id" class="form-control" />
                <input hidden type="text" name="confirm" value="true" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <h4>¿Desea eliminar este cadete?</h4>

                <div class="form-group row justify-content-center">
                    <button class="btn btn-primary m-2" type="submit"> Confirmar </button>
                    <button asp-action="Index" class="btn btn-primary m-2"> Salir </button>
                </div>
            </div>
        </form>
    </div>
</div>


