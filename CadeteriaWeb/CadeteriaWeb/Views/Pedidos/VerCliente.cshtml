@{
    ViewData["Title"] = "Info Cliente";
}
@model CadeteriaWeb.Entities.Cliente;

<section class="vh-100 bg-secondary">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Info Cliente</h3>

                        <div class="form-outline mb-4">
                            <p>Nombre: @Model.Nombre</p>
                        </div>

                        <div class="form-outline mb-4">
                            <p>Direccion: @Model.Direccion</p>
                        </div>

                        <div class="form-outline mb-4">
                            <p>Telefono: @Model.Telefono</p>
                        </div>

                        <hr class="my-4">

                        <div>
                            <p class="mb-0">Recordá que para modificar algún dato solo tenés que modificar el pedido asociado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>