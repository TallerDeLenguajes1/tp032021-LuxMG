@model CadeteriaWeb.Entities.Pedido;
@{
    ViewData["Title"] = "Modificacion del pedido #" + Model.Id;
}


<div class="text-center">
    <h1 class="display-4">Modificar el pedido</h1>
    <br />

    <div class="form-group">
        <form asp-action="UpdatePedido" method="post">
            <div>
                <h4>Datos del pedido: </h4>
                <div class="form-group row">
                    <label for="observacion">Observacion: </label>
                    <input type="text" name="observacion" id="observacion" value="@Model.Observacion" class="form-control" />
                </div>

                <input hidden type="number" name="id" value="@Model.Id" />
            </div>
            
            <div>
                <h4>Datos del cliente: </h4>
                <div class="form-group row">
                    <label for="nombre">Nombre: </label>
                    <input type="text" name="nombreCliente" id="nombre" value="@Model.Cliente.Nombre" class="form-control" />
                </div>
                <div class="form-group row">
                    <label for="direccion">Direccion: </label>
                    <input type="text" name="direccionCliente" id="direccion" value="@Model.Cliente.Direccion" class="form-control" />
                </div>
                <div class="form-group row">
                    <label for="telefono">Telefono: </label>
                    <input type="text" name="telefonoCliente" id="telefono" value="@Model.Cliente.Telefono" class="form-control" />
                </div>
            </div>

            <button class="btn btn-primary m-2" type="submit"> Confirmar </button>
            <button asp-action="Index" class="btn btn-primary m-2"> Salir </button>
        </form>
    </div>
</div>
