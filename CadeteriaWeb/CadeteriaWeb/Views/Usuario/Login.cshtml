@{
    ViewData["Title"] = "Iniciar sesion";
}
@model CadeteriaWeb.Models.UsuarioLoginViewModel;


<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Iniciar sesion</h3>

                        <form asp-action="Login" method="post">
                            <div class="form-outline mb-4">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" type="text" class="form-control form-control-lg">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            @if (Model.Message != null && Model.Message != "")
                            {
                                <div class="form-outline mb-4 bg-danger">
                                    <label asp-for="Message" class="form-label text-danger"></label>
                                    <input asp-for="Message" type="text" class="form-control" readonly value="@Model.Message">
                                </div>
                            }

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                            <hr class="my-4">

                            <div>
                                <p class="mb-0">Aún no te registraste? <a asp-action="CreateUsuario" class="fw-bold">Hazlo ahora!</a></p>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>